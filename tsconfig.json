{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",      
      "strict": true,      
      "jsx": "preserve",
      "importHelpers": true,
      "moduleResolution": "node",   
      "experimentalDecorators": true,               
      "skipLibCheck": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,      
      "types": ["node", "jest"],
      "typeRoots": ["./node_modules/@types", "./src/types"],
      "sourceMap": false,
      "baseUrl": "./",
      "paths": {
        "@/*": ["src/*"]
      },
      "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
      "resolveJsonModule": true,
      "outDir": "dist",
      "declaration": true,
      "declarationDir": "dist"
    },
    "include": [
      "src/**/*.ts", 
      "src/**/*.d.ts", 
      "src/**/*.tsx",        
      "src/**/*.vue",      
      "tests/**/*.ts",
      "tests/**/*.tsx",
      "shims-vue.d.ts"
    ],
    "exclude": ["node_modules", "src/app/App.vue", "src/main.ts"]
}
  